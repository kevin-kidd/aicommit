{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "out",
		"declaration": true,
		"declarationMap": true,
		"resolveJsonModule": true,
		"rootDir": "src",
		"composite": true,
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
